<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.azharwahidkhan.Patient_Tracker"

    xmlns:tools="http://schemas.android.com/tools">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="Patient Tracker"
        android:roundIcon="@drawable/logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name= ".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>


        <activity
            android:name=".Add_patient"
            android:label="Add Patient Detail" />

        <activity
            android:name=".Add_Patient_2"
            android:label="Add Patient Detail" />




        <activity
            android:name=".Details"
            android:label="List of Patient"
            android:theme="@style/AppTheme" />

        <activity
            android:name=".Details_2"
            android:label="List of Patient"
            android:theme="@style/AppTheme" />

        <activity
            android:name=".Patient_data"
            android:label="Patient Detail" />


        <activity
            android:name=".Patient_data_2"
            android:label="Patient Detail" />




    </application>

</manifest>